{
  "kind": "collectionType",
  "collectionName": "leads",
  "info": {
    "singularName": "lead",
    "pluralName": "leads",
    "displayName": "Lead"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "required": true
    },
    "company": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "required": true
    },
    "state": {
      "type": "enumeration",
      "default": "active",
      "enum": [
        "active",
        "inactive"
      ]
    },
    "email": {
      "type": "email",
      "required": true,
      "maxLength": 30,
      "unique": true
    }
  }
}
